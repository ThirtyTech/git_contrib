# Top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use 4 spaces as indentation
[*]
insert_final_newline = true
indent_style = space
indent_size = 4

# C# files
[*.cs]
indent_size = 4
indent_style = space
insert_final_newline = true
charset = utf-8-bom
trim_trailing_whitespace = true

# XML project files
[*.{csproj,xml}]
indent_size = 2